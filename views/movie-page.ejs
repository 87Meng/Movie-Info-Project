<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= movieIntroData.title%></title>
    <!-- bootstrap cdn -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- font-awesome cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="moviePage">
      <div class="imgContainer">
        <img src=https://image.tmdb.org/t/p/w1280<%=movieIntroData.poster_path
        %> alt=""/>
      </div>

      <div class="infoContainer">
        <h1><%= movieIntroData.title%></h1>
        <div class="releaseInfo">
          <p><%= movieIntroData.release_date%></p>
          <% movieIntroData.genres.forEach(data=>{%>
          <p><%=data.name%></p>
          <%})%>
        </div>

        <div class="icons">
          <i class="fa-regular fa-heart"></i>
          <i class="fa-regular fa-bookmark"></i>
          <i class="fa-solid fa-video"></i>
        </div>
        <h3><%= movieIntroData.overview%></h3>
        <h4>演員陣容</h4>
        <div class="actors">
          <% actors.forEach(actor=>{%>
          <div class="actorInfo">
            <img
              src="https://image.tmdb.org/t/p/w780<%=actor.profile_path%>"
              alt="actor"
            />
            <p>
              <%=actor.original_name%>
              <br />
              飾 <%=actor.character%>
            </p>
          </div>

          <%})%>
        </div>
      </div>
    </div>

    <hr />

    <div class="genreMovie">
      <% recommend.forEach(data=>{%>
      <div>
        <a href="/moiveIntro/<%=data.id%>">
          <img
            src="https://image.tmdb.org/t/p/w780<%=data.backdrop_path%>"
            alt="recommend"
        /></a>
        <p style="text-align: center"><%=data.title%></p>
      </div>
      <% }) %>
    </div>
    <a href="/">返回首頁</a>
  </body>
  <script>
    const backgroundPage = document.querySelector(".moviePage");
    backgroundPage.style.backgroundImage = `linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)) ,url(https://image.tmdb.org/t/p/w780${`<%=movieIntroData.backdrop_path%>`})`;
  </script>
</html>
